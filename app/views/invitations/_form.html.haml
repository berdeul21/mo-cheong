= bootstrap_form_for @invitation do |f|
  - if @invitation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invitation.errors.count, "error")} prohibited this invitation from being saved:"
      %ul
        - @invitation.errors.full_messages.each do |message|
          %li= message

  = f.datetime_field :d_day
  = f.text_field :title
  = f.file_field :thumb
  = f.text_area :description
  = f.text_area :directions
  = f.text_field :contact_bride
  = f.text_field :contact_groom
  = f.text_field :contact_other

  .actions
    = f.submit 'Save'
